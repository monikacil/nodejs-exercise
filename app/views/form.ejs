<div class="bg-light my-5 p-5 shadow bg-body-tertiary rounded">
  <form method="POST" class="row g-3 needs-validation" novalidate>
    <div class="mb-3 col-md-4">
      <label for='species-input' class='form-label'>
        Species
      </label>
      <input type='string' class='form-control' id='species-input' name="species" />
    </div>
    <div class="mb-3 col-md-6">
      <label for='variety-input' class='form-label'>
        Variety
      </label>
      <input type='string' class='form-control' id='variety-input' name="variety"/>
    </div>
    <div class="mb-3 col-md-2">
      <label for='price-input' class='form-label'>
        Price
      </label>
      <input type='string' class='form-control' id='price-input' name="price"/>
    </div>
    <div class="mb-3 col-md-8">
      <label for='passport-input' class='form-label'>
        Passport
      </label>
      <input type='string' class='form-control' id='passport-input' name="passport"/>
    </div>
    <div class="mb-3 col-md-4">
      <label for='date-input' class='form-label'>
        Date
      </label>
      <input type='date' class='form-control' id='date-input' name="date"/>
    </div>
    <div class="mb-3 col-md-4">
      <label for='buyer-name-input' class='form-label'>
        Buyer name
      </label>
      <input type='string' class='form-control' id='buyer-name-input' name="buyer-name"/>
    </div>
    <div class="mb-3 col-md-6">
      <label for='address-input' class='form-label'>
        Address
      </label>
      <input type='string' class='form-control' id='address-input' name="address"/>
    </div>
    <div class="mb-3 col-md-2">
      <label for='country-input' class='form-label'>
        Country code
      </label>
      <select class='form-select' id='country-input' name="country">
        <option value="PL">PL</option>
        <option value="EN">EN</option>
        <option value="DE">DE</option>
      </select>
    </div>
    <div class="mb-3 col-md-6">
      <label for='phone-input' class='form-label'>
        Phone
      </label>
      <input type='number' class='form-control' id='phone-input' name="phone"/>
    </div>
    <div class="mb-3 col-md-6">
      <label for='email-input' class='form-label'>
        Email
      </label>
      <input type='email' class='form-control' id='email-input' name="email"/>
    </div>
    
    <div class="mb-3 col-md-12">
      <div class="form-check">
        <label class="form-check-label" for="is-proffessional">
          Proffessional
        </label>
        <input class="form-check-input" type="checkbox" value="" id="is-proffessional">
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
