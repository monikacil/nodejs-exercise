<nav aria-label="breadcrumb">
    <ol class="breadcrumb mt-2 ps-1">
      <li class="breadcrumb-item"><a href="/plants">Plants List</a></li>
      <li class="breadcrumb-item active" aria-current="page">Plant Details</li>
    </ol>
</nav>
<div class="bg-light my-2 p-5 shadow bg-body-tertiary rounded">
    <div class="mb-4 pb-4 d-flex justify-content-between border-bottom">
        <h5 class="mb-0 text-capitalize">
            <%- plant.species + " "+ plant.variety %>
        </h5>
    </div>
    <div class="row">
        <div class="col-4">
            <div class="py-3 fs-4">Plant Information</div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item bg-light">Species:  <%- plant.species %> </li>
                <li class="list-group-item bg-light">Variety:  <%- plant.variety %> </li>
                <li class="list-group-item bg-light">Passport: <%- plant.passport %> </li>
                <li class="list-group-item bg-light">Sold date: <%- plant.date.toISOString().substring(0, 10) %> </li>
                <li class="list-group-item bg-light">Price: <%- plant.price %> z≈Ç</li>
            </ul>
        </div>
        <div class="col-4">
            <div class="py-3 fs-4">Buyer information</div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item bg-light">Name:  <%- plant.buyer.name %> </li>
                <li class="list-group-item bg-light">Address:  <%- plant.buyer.address + ' ' + plant.buyer.country %> </li>
                <li class="list-group-item bg-light">Phone number: <%- plant.buyer.phone %> </li>
                <li class="list-group-item bg-light">Email: <%- plant.buyer.email %> </li>
            </ul>
        </div>

        <% if(plant?.images) { %>
            <% if(plant?.images) { %>
                <div id="plants-gallery" class="carousel slide col-4 mt-4">
                    <div class="carousel-inner">
                        <% plant.images.forEach((image, idx) => { %>
                        <div class="<%= idx === 0 ? 'carousel-item active': 'carousel-item' %>" id="<%= image._id %>">
                            <img src="/public/images/<%= image.filename %>" class="d-block w-100" alt="image.originalname">
                        </div>
                        <div class="position-absolute top-0 ps-5 z-3">
                            <a class="icon-link" href="/plants/<%- plant._id%>/delete-img/<%- image._id %>" data-bs-toggle="tooltip" data-bs-title="Delete image">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="black" class="bi bi-trash3" viewBox="0 0 16 16">
                                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"/>
                                </svg>
                            </a>
                        </div>
                        <% }) %>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#plants-gallery" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                      </button>
                      <button class="carousel-control-next" type="button" data-bs-target="#plants-gallery" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                      </button>
                </div>
            <% }%>
        </div>
        <% }%>
        <div class="mt-4 text-end">
            <a class="btn btn-primary" href=<%= "/plants/" + plant._id + "/form" %> >Edit</a>
            <a class="btn btn-danger"
                onclick="return confirm('Are you sure?')"
                href=<%= "/plants/" + plant._id + "/delete" %>>Delete</a>
        </div>
    </div>

   
</div>
